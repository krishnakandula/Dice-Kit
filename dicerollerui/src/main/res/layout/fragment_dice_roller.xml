<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.roll.DiceRollerFragment"
    android:background="@color/light_gray">

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_dice_roller_history_card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_dice_roller_equation_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight=".4">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_dice_roller_history_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp" />
    </android.support.v7.widget.CardView>

    <include
        android:id="@+id/fragment_dice_roller_dice_pad"
        layout="@layout/dice_pad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_dice_roller_equation_edit"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight=".5" />

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_dice_roller_equation_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/equation_edit_min_height"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/light_gray"
        app:layout_constraintBottom_toTopOf="@+id/fragment_dice_roller_dice_pad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_dice_roller_history_card_view"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight=".1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_dice_roller_equation_edit_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/dice_item"
            tools:orientation="horizontal" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
