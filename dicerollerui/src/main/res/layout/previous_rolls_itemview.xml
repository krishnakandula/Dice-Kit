<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/previous_rolls_itemview_recycler_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/previous_rolls_itemview_result_card_view"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight=".8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/previous_rolls_itemview_result_card_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/dice_result_item_height"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/accent"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight=".2"
        app:layout_constraintStart_toEndOf="@id/previous_rolls_itemview_recycler_view"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/previous_rolls_itemview_result_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            tools:text="#" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
