<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dice_item_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:minHeight="@dimen/dice_result_item_height"
    android:minWidth="@dimen/dice_result_item_width"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/dice_result_item_height"
        android:minWidth="@dimen/dice_result_item_width"
        android:background="@drawable/item_border"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dice_item_dice_type_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/teal"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.Button.Borderless.Colored"
            tools:text="D4" />

        <TextView
            android:id="@+id/dice_item_dice_roll_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="18sp"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            tools:text="1" />

    </LinearLayout>
</android.support.v7.widget.CardView>
