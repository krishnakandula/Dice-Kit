<?xml version="1.0" encoding="utf-8"?>
<com.apps.krishnakandula.dicerollerui.view.DiceRollerDragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/child0"
        android:background="@color/royal_purple"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:text="Dice pad"/>
    </FrameLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_dice_roller_equation_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/equation_edit_min_height"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/light_gray">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_dice_roller_equation_edit_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/dice_item"
            tools:orientation="horizontal" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_dice_roller_history_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_dice_roller_history_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp" />
    </android.support.v7.widget.CardView>

</com.apps.krishnakandula.dicerollerui.view.DiceRollerDragLayout>
